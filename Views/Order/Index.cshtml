@model List<SverigesFordonsFöreningEnterprisesAB.Models.Order>

    @{
        ViewData["Title"] = "Orders";
    }

    <h2>Orders</h2>

    @if (!Model.Any())
    {
        <p>No orders found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Car Model</th>
                    <th>Motorcycle Model</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.Customer.FirstName</td>
                        <td>@order.FkCarId</td>
                        <td>@order.FkMotorcycleId</td>
                    </tr>
                }
            </tbody>
        </table>
    }
