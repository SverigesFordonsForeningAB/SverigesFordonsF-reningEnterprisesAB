﻿@using SverigesFordonsFöreningEnterprisesAB.Models
@model List<Customer>
<h1>customer</h1>
<a asp-action="Create" class="btn btn-primary">Add a new customer</a>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.SocialSecurityNumber</td>
                <td>@customer.Email</td>
                <td>@customer.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-primary">Details</a>
                    <form asp-action="DeleteConfirmed" class="d-inline-block" asp-route-id="@customer.CustomerId" method="post">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No customers in the database</p>
}